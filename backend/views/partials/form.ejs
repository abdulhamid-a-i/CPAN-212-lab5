<form action=<%= form_action %> method=<%= form_method %>>
    <div class="form-group"
    <label for="id">Client ID</label>
    <input type="text" id="id" <%= isEditing ? 'readonly':'' %> value=<%= r_client ? r_client.id : '' %>>
    </div>

    <div class="form-group"
    <label for="name">Client Full Name</label>
    <input type="text" id="clientName"  value= <%= r_client ? r_client.fullName : '' %>>
    </div>

    <div class="form-group"
    <label for="email">Email</label>
    <input type="text" id="clientEmail" value=<%= r_client ? r_client.email : '' %>>
    </div>

    <div class="form-group"
    <label for="category">Risk Category</label>
    <select type="text" id="riskCategory">
        <% riskCategories.forEach(category => { %>
            <option value="<%= category %>" <%= (category === r_client.riskCategory) ? 'selected' : '' %>>
                <%= category %>

            </option>
        <% }) %>
    </select>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Submit">
    </div>
</form>