<section class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mb-3">
  <div>
    <h2 class="h5 mb-1">Client Records</h2>
    <p class="text-muted mb-2">Total records: <strong><%= totalClients %></strong></p>
    <div>
      <a class="btn btn-sm btn-primary mb-0" href="/create">Create Profile</a>
    </div>
  </div>
  <div>
    
  </div>
</section>

<% if (!clients || clients.length === 0) { %>
  <div class="alert alert-warning" role="alert">
    No client records are currently available.
  </div>
<% } else { %>
  <div class="card shadow-sm">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table align-middle">
          <caption class="visually-hidden">List of clients</caption>
          <thead>
            <tr>
              <th scope="col">Client ID</th>
              <th scope="col">Full Name</th>
              <th scope="col">Email</th>
              <th scope="col">Risk Category</th>
              <th scope="col">Created Date</th>
              <th scope="col" class="text-end">Action</th>
            </tr>
          </thead>
          <tbody>
            <% clients.forEach(client => { %>
              <tr>
                <td><%= client.id %></td>
                <td><%= client.fullName %></td>
                <td><a href="mailto:<%= client.email %>"><%= client.email %></a></td>
                <td>
                  <% if (client.riskCategory === "High") { %>
                    <span class="badge text-bg-danger">High</span>
                  <% } else if (client.riskCategory === "Medium") { %>
                    <span class="badge text-bg-warning">Medium</span>
                  <% } else { %>
                    <span class="badge text-bg-success">Low</span>
                  <% } %>
                </td>
                <td><%= client.createdDate %></td>
                <td class="text-end">
                  <a class="btn btn-sm btn-primary" href="/clients/<%= client.id %>">View Profile</a>
                </td>
                <td>
                  <a class="btn btn-sm btn-primary" href="/edit/<%= client.id %>">Edit Profile</a>
                </td>
                <td>
                  <button class="btn btn-sm btn-danger" data-id="<%= client.id %>">Delete Profile</button> 
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div class="mt-3 small text-muted">
        API endpoints for AngularJS later:
        <code>/api/clients</code> and <code>/api/clients/:id</code>
      </div>
    </div>
  </div>
<% } %>

<script>
  let delBtns = document.querySelectorAll('button');
  delBtns.forEach( (b) => {
    b.addEventListener('click', async (e) => {
      const clientId = e.target.getAttribute('data-id');
      if (confirm("Are you sure you want to delete this profile?"))  {
              const payload = {id: clientId};
        try{
            const response = await fetch(`/clients/${clientId}`, {
                method: 'DELETE',
                headers: { "Content-Type": "application/json"},
                body: JSON.stringify(payload)
            });

        const result = await response.json()
        if (result.ok){
            window.location.href = '/clients';
        }

        } catch(error){
             console.error('Error: ', error);
        }
      }
    });
  });

</script>
